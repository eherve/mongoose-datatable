{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": false,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist"
  },
  "include": ["src/**.ts"],
  "exclude": ["node_modules", "src/**.spec.ts"]
}
