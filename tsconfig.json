{
  "compileOnSave": false,
  "compilerOptions": {
    "noEmitOnError": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": true
  },
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**.spec.ts"
  ]
}